{
    "version": 3,
    "configurePresets": [
        {
            "name": "defaults",
            "hidden": true,
            "binaryDir": "${sourceDir}/builds/${presetName}"
        },
        {
            "name": "win",
            "inherits": "defaults",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "architecture": "Win32"
        },
        {
            "name": "mac",
            "inherits": "defaults",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            }
        },
        {
            "name": "win-vcpkg",
            "inherits": "win",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": {
                    "type": "FILEPATH",
                    "value": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
                },
                "VCPKG_TARGET_ARCHITECTURE": "x86"
            }
        },
        {
            "name": "mac-vcpkg",
            "inherits": "mac",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": {
                    "type": "FILEPATH",
                    "value": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
                }
            }
        }
    ],
    "buildPresets": [
        {
            "name": "win",
            "configurePreset": "win"
        },
        {
            "name": "mac",
            "configurePreset": "mac"
        },
        {
            "name": "win-vcpkg",
            "configurePreset": "win-vcpkg"
        },
        {
            "name": "mac-vcpkg",
            "configurePreset": "mac-vcpkg"
        }
    ]
}
